generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("PG_DATABASE_URL")
}

model UserAuth {
    id     Int    @id @default(autoincrement())
    user   Users   @relation(fields: [username], references: [username], onDelete: Cascade, onUpdate: Cascade)
    username String @unique
    hash   String
    salt   String
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}

model Users {
    id        String    @id @default(uuid())
    username  String    @unique
    role      String
    email     String?
    UserAuth  UserAuth?
    picture   String?
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    followers Follows[] @relation("followers")
    following Follows[] @relation("following")
    posts     Posts[]
    @@unique([id, username])
}

model Posts {
    id       String  @id @default(uuid())
    title    String
    content  String?
    author   Users?   @relation(fields: [authorId, authorName], references: [id, username], onUpdate: Cascade, onDelete: NoAction)
    authorId String?
    authorName String?
    createdAt  DateTime @default(now())
}

model Follows {
    followerId  String
    follower  Users @relation(name: "followers", fields: [followerId], references: [id], onDelete: Cascade)
    followingId     String
    following Users  @relation(name: "following", fields: [followingId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
    @@id([followerId, followingId])
}


